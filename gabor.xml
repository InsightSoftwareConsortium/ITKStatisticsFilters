   This module computes the skewness of an image locally
  </description>
  <version>1</version>
  <documentation-url></documentation-url>
  <license></license>
  <contributor>Francois Budin</contributor>
<acknowledgements>
</acknowledgements>
  <parameters>
    <label>Input/Output</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input Image</description>
    </image>
    <image>
      <name>outputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <index>1</index>
      <description>Output Image</description>
    </image>
    <image>
      <name>outputFilter</name>
      <label>Output Filter</label>
      <channel>output</channel>
      <longflag>filter</longflag>
      <description>Output Filter</description>
    </image>
    <file>
      <name>listFiles</name>
      <label>List Output Files</label>
      <channel>output</channel>
      <flag>o</flag>
      <longflag>listFiles</longflag>
      <description>Output Image</description>
    </file>
